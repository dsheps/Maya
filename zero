global proc zeroAttributes () {
//create variables
  string $item;
  
  //Get a list of the selected objects
  string $selectionList[] = `ls -sl`;
  
  //loop through each selection and zero out the attributes.
     for ($eachObj in $selectionList)     print ($eachObj + "\n"); 
    setAttr ($eachObj + ".translateX") 0;
    setAttr ($eachObj + ".translateY") 0;
    setAttr ($eachObj + ".translateZ") 0;
}

